<h2>회원가입 페이지</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :"사진" %><br />
    <%= f.file_field :picture, autofocus: true %>
    <!-- 보류 -->
    <!-- 기본이미지와 등록이미지를 구분하기 위한 조건문 -->
    <% if f.file_field :picture.nil? %>
    <img src="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcRr9SOBIVHqymEnYIVOeAKZPb8Uj8XnddQhL6VfL51OYZCGqRKAnA">
    <% else %>
    <h1>으아아아</h1>
    <% end %><br />
    <!-- 여기까지 -->
    
  </div>
  
  <div class="field">
    <%= f.label :"이름" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :"기관명" %><br />
    <%= f.text_field :organization_name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :"이메일" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"비밀번호" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :"비밀번호확인" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "완료" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
