<div class="slide continue slided_circles">
  <div class="row" style="padding:100px 11% 10px 11%;">
    <center>
      <div class="col-md-12" style="padding:0px;">
        <!--동그라미 봉사시간-->
        <div class="circle circle-bongsa_time hvr-border-fade">
          <p><%= @b.time_expect_total %>H</p>
        </div>
        <!--동그라미 디-데이-->
        <div class="circle circle-d_day hvr-border-fade">
