


<% @region = params[:region] if @region.nil? && !params[:region].nil? %>
<% @school = params[:school] if @school.nil? && !params[:school].nil? %>
<% @btime = params[:btime] if @btime.nil? && !params[:btime].nil? %>
<% @category = params[:category] if @category.nil? && !params[:category].nil? %>
<% @s_word = params[:s_word] if @s_word.nil? && !params[:s_word].nil? %>

<!--봉사정보-->
<br>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="row">
            <%  k = 6 
                k = Bongsa.count if k < Bongsa.count %>
            <% if @s_word.nil? && @region == "empty" && @school == "empty" && @time == "empty" && @ctgory == "empty" %>
                <% Bongsa.all.sample(k).each do |b| %>
                    <a href="/home/bongsa_information/<%= b.id %>">
                        <div class="col-md-4" style="padding:10px;">
                            <div class="row">
                                <div class="col-md-12" style="padding:12px 0px 12px 0px; font-size:21px; background-color:skyblue; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                                    <center><%= b.name %></center>
                                </div>
                                <div class="col-md-12" style="padding:0px;">
                                    <img src="<%= b.img_main %>" alt="이미지" style="width:100%; height:170px; margin-top:0px;">
                                </div>
                            </div>    
                            <div class="row">
                                <div class="col-md-12" style="padding:0px;">
                                    <div class="col-sm-12 col-md-4" style="text-align:center; background-color:red; height:110px;"><%= b.time_expect_total %></div>
                                    <div class="col-sm-12 col-md-4" style="text-align:center;background-color:yellow; height:110px;"><%= Region.find(b.region_id).name %></div>
                                    <div class="col-sm-12 col-md-4" style="text-align:center;background-color:orange; height:110px;"><%= b.date_real_start %>~<%= b.date_real_end %></div>  
                                </div>
                            </div>
                        </div>
                    </a>
                <% end %>
            <% else %>
                <% Bongsa.all.each do |b| %>
                    <% next if (@s_word != "empty" && !(@s_word.nil?)) && !(b.name.include?(@s_word)) %>
                    <%# next if !(@s_word.nil?) && (b.name <=> @s_word) >= 0 %>
                    <% next if (@region != "empty" && !(@region.nil?) && !(@region.empty?)) && @region.to_i != b.region_id %>                    
                    <% next if (@school != "empty" && !(@school.nil?) && !(@school.empty?)) && @school.to_i != b.school_id %>
                    <% next if (@btime   != "empty" && !(@btime.nil?) && !(@btime.empty?)) && @btime.to_i   != b.btime_id %>
                    <% next if (@category != "empty" && !(@category.nil?) && !(@category.empty?)) && b.category_id != @category.to_i %>
                    
                    <a href="/home/bongsa_information/<%= b.id %>">
                        <div class="col-md-4" style="padding:10px;">
                            <div class="row">
                                <div class="col-md-12" style="padding:12px 0px 12px 0px; font-size:21px; background-color:skyblue; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                                    <center>[<%= b.name %>]</center>
                                </div>
                                <div class="col-md-12" style="padding:0px;">
                                    <img src="<%= b.img_main %>" alt="이미지" style="width:100%; height:170px; margin-top:0px;">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12" style="padding:0px;">
                                    <div class="col-sm-12 col-md-4" style="text-align:center; background-color:red; height:110px;"><%= b.time_expect_total %></div>
                                    <div class="col-sm-12 col-md-4" style="text-align:center;background-color:yellow; height:110px;"><%= Region.find(b.region_id).name %></div>
                                    <div class="col-sm-12 col-md-4" style="text-align:center;background-color:orange; height:110px;"><%= b.date_real_start %>~<%= b.date_real_end %></div>  
                                </div>
                            </div>
                        </div>
                    </a>
                <% end %>
            <% end %>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>




