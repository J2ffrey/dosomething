<div class="row">
    <div class="col-md-1"></div>
    <%  k = 6 
        
        unless @s_word.nil?
            unless @bongsa.nil?
                k = @bongsa.all.count
            else
                k = 6
            end
        end %>
        
    <% @bongsa.sample(k).each do |b| %>
        <div class="col-md-3">
            <div>
                <div class="panel panel-default">
                    <div class="panel-heading"><%= b.name %></div>
                    <div class="panel-body">
                       <%= b.region %><br>
                     <img src="<%= b.bongsa_img %>" style="width:100%; height:270px;">
                    </div>
                    <div class="panel-footer">
                        <a href="/home/bongsa_information/<%= b.id %>">
                        <button class="btn btn-default btn-block">더보기</button>
                        </a>
                    </div> 
                </div>
            </div>
        </div>
    <% end %>   
    <div class="col-md-1"></div>
</div>



