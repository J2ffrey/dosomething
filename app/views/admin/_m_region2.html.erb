            <div class="well well-out">
                <%#= form_for @sb, url: {controller: 'admin', action:'add_sb'} do |f| %>
                <form action="/admin/m_region2" method="POST">
                    <input type="hidden" name="mod" value="<%= @mod %>">
                    <input type="hidden" name="id" value="<%= @b.id %>">
                    <div class="well well-in">
                        <div class="form-group2">
                            <label>소속 Region</label>
                            <select name="region_id">
                                <% Region.all.each do |x| %>
                                    <% if @mod == "1" && @b.region_id == x.id %>
                                        <option value="<%= x.id %>" selected><%= x.name %></option>
                                    <% else %>
                                        <option value="<%= x.id %>"><%= x.name %></option>
                                    <% end %>
                                <% end %>
                            </select>
                        </div>
                        <div class="form-group2">
                            <label>이름</label>
                            <input type="text" name="name" class="form-control" value="<%= @b.name %>" required />
                        </div>
                    </div>
                
                    <div class="row" align="right">
                        <% if @mod == "1" %>
                            <a class="btn btn-orange" href="/admin/del_region2?id=<%= @b.id %>">삭제</a>
                            <input type="submit" value="수정" class="btn btn-orange" />
                        <% else %>
                        <input type="submit" value="등록" class="btn btn-orange" />
                        <% end %>
                        <a class="btn btn-orange" href="/admin/index?admin=region2&id=<%= @b.region_id %>">취소</a>
                        
                    </div>
                </form>
                
            
            
            </div>
        </div>
        
    	<div class="row">
    		<hr class="feature-divider">
    	</div>
    </div>
	<div class="col-md-1"></div>
</div>