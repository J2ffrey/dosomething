<div class="well well-out">
    <div class="well well-in">
        권한-모음 목록
    </div>
    
    <div class="well well-in">
        <table class="table" style="border-color: black;">
            <thead>
                <tr class="tr-head">
                    <td>#</td>
                    <td>이름</td>
                    <td>설명</td>
                </tr>
            </thead>
            <tbody>
                <% AuthorityBundle.all.reverse.each do |post| %>
                    <tr class="tr-content">
                        <td><%= post.id %></td>
                        <td><a href="/admin/index?admin=m_authority_bundle&id=<%= post.id %>&mod=1"><%= post.name %></a></td>
                        <td><%= post.text %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <div class="row" align="right">
        <a class="btn btn-orange" href="/admin/index?admin=m_authority_bundle">등록</a>
    </div>
</div>
