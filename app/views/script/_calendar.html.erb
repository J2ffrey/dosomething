<script>

function s_refresh(year,month){
				var site_text = "/calendar/small?" + 'month=' + month
  			+ '&year=' + year;
			
				$('#small').load(site_text);
}

function refresh(year,month,day){
				var site_text = "/calendar/large?" + 'month=' + month
  			+ '&year=' + year
  			+ '&day=' + day;
			
				$('#large').load(site_text);
}

function r_refresh(){
				var site_text = "/calendar/large?" + 'month=' + "<%= @month %>"
		 			+ '&year=' + "<%= @year %>"
	  			+ '&day=' + "<%= @day %>"
	  			+ '&s_word=' + form_s.s_word.value;
			
				$('#large').load(site_text);
				return false;
}
</script>